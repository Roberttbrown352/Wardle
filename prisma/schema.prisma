// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  displayName String
  email String @unique
  password String
  wins Int
  losses Int
  createdAt DateTime
}

model Game {
  id String @id @default(cuid())
  player1 String
  player2 String
  Winner String
  Word String
}

model Session {
  id String @id @default(cuid())
  gameId String
  userId String
}
